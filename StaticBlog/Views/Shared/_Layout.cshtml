<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Swimburger</title>
    <environment exclude="Development">
        <link rel="stylesheet" asp-href-include="~/assets/*.css" />
    </environment>
</head>
<body>
    <header class="header header--large">
        <div>
            <h1>Swimburger</h1>
        </div>
        <div>
            <nav>
                <a is-active-route asp-controller="home" asp-action="index">Home</a>
                <a is-active-route asp-controller="blog" asp-action="index">Blog</a>
            </nav>
        </div>
    </header>
    @RenderBody()

    <script type="text/javascript" asp-src-include="~/assets/*.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>